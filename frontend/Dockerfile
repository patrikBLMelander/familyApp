FROM node:22-alpine AS build

WORKDIR /app

# Kopiera npm-manifest (r채cker med package.json, ev. package-lock om du l채gger till den senare)
COPY package*.json ./
RUN npm install

# Kopiera resten av frontend-koden
COPY . .

# Build - Vite l채ser automatiskt VITE_* variabler fr책n environment vid build-time
# Railway skickar automatiskt environment variables till build-steget
RUN npm run build

FROM nginx:1.27-alpine

COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]


